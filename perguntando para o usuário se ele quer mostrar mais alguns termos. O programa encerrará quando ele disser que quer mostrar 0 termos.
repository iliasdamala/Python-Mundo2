print('Gerador de PA')
print('-=' * 10)
Primeiro = int(input('Primeiro termo:'))
Razao = int(input(' Razao da PA:'))
termo = Primeiro
cont = 1
total = 0
mais = 10
while mais != 0 :
    total = total+mais
    while cont <= total :
      print('{} -> '.format(termo), end='')
      termo = termo + Razao
      cont += 1
    print('PAUSA')
    mais = int(input('quantos termos voce quer mostrar a mais? '))
print('Progressao fomalizada com {} termos mostrados'.format(total))
